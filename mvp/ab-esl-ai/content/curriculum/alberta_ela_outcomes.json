{
    "name": "Alberta Curriculum Alignment - ELA & ESL Benchmarks",
    "description": "Mapping of Alberta English Language Arts outcomes and ESL Proficiency Benchmarks for K-12",
    "version": "1.0.0",
    "last_updated": "2024-12",
    "esl_proficiency_benchmarks": {
        "description": "Alberta ESL Proficiency Benchmarks for K-12 students",
        "levels": {
            "level_1": {
                "name": "Beginning",
                "description": "Very limited English proficiency; relies heavily on L1 and non-verbal communication",
                "reading": "May recognize some letters and high-frequency sight words",
                "writing": "Copies words and simple phrases; limited independent writing",
                "listening": "Understands simple commands with visual support and repetition",
                "speaking": "Uses single words and memorized phrases; pronunciation may impede understanding",
                "indicators": [
                    "Points to pictures/objects when named",
                    "Copies words from board or text",
                    "Uses gestures to communicate",
                    "Responds to simple yes/no questions with gestures"
                ]
            },
            "level_2": {
                "name": "Developing",
                "description": "Basic interpersonal communication; struggles with academic language",
                "reading": "Reads simple sentences with familiar vocabulary; uses pictures for support",
                "writing": "Writes simple sentences with patterned support; frequent errors",
                "listening": "Follows multi-step directions with visual support",
                "speaking": "Uses phrases and simple sentences; errors but generally understood",
                "indicators": [
                    "Reads grade-level text with support",
                    "Writes sentences using frames",
                    "Participates in structured conversations",
                    "Follows classroom routines independently"
                ]
            },
            "level_3": {
                "name": "Expanding",
                "description": "Functional academic language; some gaps in abstract/complex content",
                "reading": "Reads grade-level text with moderate support; comprehends main ideas",
                "writing": "Writes paragraphs with organization; grammar errors present",
                "listening": "Understands most classroom instruction",
                "speaking": "Expresses ideas clearly; occasional errors don't impede communication",
                "indicators": [
                    "Identifies main idea and supporting details",
                    "Writes organized paragraphs",
                    "Participates in class discussions",
                    "Uses academic vocabulary in context"
                ]
            },
            "level_4": {
                "name": "Bridging",
                "description": "Near-grade-level proficiency; continued vocabulary development needed",
                "reading": "Reads grade-level text with minimal support; analyzes content",
                "writing": "Writes multi-paragraph texts; minor errors",
                "listening": "Understands complex academic content",
                "speaking": "Communicates effectively in academic and social contexts",
                "indicators": [
                    "Analyzes texts for author's purpose",
                    "Writes essays with thesis and evidence",
                    "Presents information to class",
                    "Uses varied sentence structures"
                ]
            },
            "level_5": {
                "name": "Exited/Monitoring",
                "description": "Grade-level proficiency; may need occasional vocabulary support",
                "reading": "Reads at grade level independently",
                "writing": "Writes at grade level with appropriate conventions",
                "listening": "Fully comprehends academic instruction",
                "speaking": "Communicates with grade-level fluency",
                "indicators": [
                    "Performs at grade level on assessments",
                    "Requires no ESL-specific support",
                    "May monitor for 2 years after exit"
                ]
            }
        }
    },
