    "assessment_tools": {
        "oral_reading_fluency": {
            "name": "Oral Reading Fluency (ORF)",
            "measures": [
                "WCPM",
                "accuracy",
                "prosody"
            ],
            "administration": "1 minute timed reading of grade-level passage",
            "scoring": {
                "wcpm": "Words read correctly per minute",
                "accuracy": "Correct words / total words attempted",
                "prosody": "1-4 scale for expression and phrasing"
            }
        },
        "maze": {
            "name": "MAZE",
            "measures": [
                "comprehension",
                "vocabulary"
            ],
            "administration": "3 minute silent reading with word choices",
            "scoring": "Correct responses in 3 minutes"
        },
        "phoneme_segmentation": {
            "name": "Phoneme Segmentation Fluency (PSF)",
            "measures": [
                "phonemic_awareness"
            ],
            "administration": "1 minute oral segmentation",
            "scoring": "Correct phonemes per minute"
        },
        "letter_naming": {
            "name": "Letter Naming Fluency (LNF)",
            "measures": [
                "alphabet_knowledge"
            ],
            "administration": "1 minute letter identification",
            "scoring": "Letters named correctly per minute"
        }
    },
